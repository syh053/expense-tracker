<div class="d-flex justify-content-between align-items-center title second-title">
    <div class="">
        <span class="ms-5">家庭記帳本</span>
    </div>
</div>

<div class="total-content">

    <div class="form-group text-center">

        <div class="font-content">

            {{> message}}

            <form action="/register" method="post">

                <div class="d-flex align-items-center row mb-3">
                    <label for="name" class="col-3 form-label text-start my-0">名稱</label>
                    <input type="text" class="col form-control" id="name" name="name">
                </div>

                <div class="d-flex align-items-center row mb-3">
                    <label for="mail" class="col-3  form-label text-start my-0">信箱</label>
                    <input type="email" class="col form-control" id="mail" name="mail">
                </div>

                <div class="d-flex align-items-center row mb-3">
                    <label for="password" class="col-3  form-label text-start my-0">密碼</label>
                    <input type="password" class="col form-control" id="password" name="password">
                </div>

                <div class="d-flex align-items-center row mb-3">
                    <label for="Confirm-password" class="col-3  form-label text-start my-0">確認密碼</label>
                    <input type="password" class="col form-control" id="Confirm-password" name="ConfirmPassword">
                </div>


                <div class="text-end">
                    <span class="me-1">已有帳號?</span>
                    <a class="me-3" href="/login">登入</a>
                    <button type="submit" class="btn btn-primary my-4 me-3">註冊</button>
                
                
            </form>

                    <form action="/login/facebook" method="get" style="display: inline;">
                        <button type="submit" class="btn btn-primary my-4">臉書註冊</button>
                    </form>
                </div>

        </div>

    </div>

</div>

<script src="/javascript/all.min.js"></script>